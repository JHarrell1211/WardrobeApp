<body>
    @model IEnumerable<WardrobeAppMVC.Models.Sho>

    @{
        ViewBag.Title = "Index";
    }
    <div class="shoes">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <p class="title">Shoes</p>
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                </div>
            </div>


            <div class="row index-row">
                @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-3 item-col">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.ShoeName)</h3>
                            <p>
                                <img src="@Html.DisplayFor(modelItem => item.ShoeImage)" />
                            </p>
                            <p>
                                <button type="button" class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = item.ShoeID })</button>
                                <button type="button" class="btn btn-success">@Html.ActionLink("Details", "Details", new { id = item.ShoeID })</button>
                                <button type="button" class="btn btn-warning">@Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })</button>
                            </p>
                        </div>
                    </div>
                </div>
        }
            </div>
            <div class="empty-row"></div>
        </div>
    </div>
</body>