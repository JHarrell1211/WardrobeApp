<body onload="Greeting()" onresize="Resize()" onscroll="scroll()">
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="homepage">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-primary" id="btn" onclick="Redirect(this)">Google</button>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 col-md-2"></div>
                <div class="col-sm-4 col-md-8">
                    <div class="jumbotron">
                        <div class="row row-header">
                            <div class="col-sm-12 col-header" id="welcome">
                                <p> </p>
                                Julian's Wardrobe
                                <p id="resize"></p>
                            </div>
                        </div>

                        <div class="row button-row">
                            <div class="col-sm-4 col-md-2"></div>
                            <div class="col-sm-4 col-md-2">
                                <p id="tops" onmouseover="mouseOver('tops')" , onmouseout="mouseOut('tops')">
                                    Tops <br />
                                    <a class="btn btn-warning" href="~/Tops/Index">Click Here!</a>
                                </p>
                            </div>
                            <div class="col-sm-4 col-md-2">
                                <p id="bottoms" onmouseover="mouseOver('bottoms')" , onmouseout="mouseOut('bottoms')">
                                    Bottoms <br />
                                    <a class="btn btn-success" href="~/Bottoms/Index">Click Here!</a>
                                </p>
                            </div>
                            <div class="col-sm-4 col-md-2">
                                <p id="shoes" onmouseover="mouseOver('shoes')" , onmouseout="mouseOut('shoes')">
                                    Shoes <br />
                                    <a class="btn btn-danger" href="~/Shoes/Index">Click Here!</a>
                                </p>
                            </div>
                            <div class="col-sm-4 col-md-2">
                                <p id="acc" onmouseover="mouseOver('acc')" , onmouseout="mouseOut('acc')">
                                    Accessories <br />
                                    <a class="btn btn-info" href="~/Accessories/Index">Click Here!</a>
                                </p>
                            </div>
                            <div class="col-sm-4 col-md-2"></div>
                        </div>
                        <div class="row button-row2">
                            <div class="col-sm-6 col-md-4"></div>
                            <div class="col-sm-6 col-md-4">
                                <p class="outfit" id="out" onmouseover="mouseOver('out')" , onmouseout="mouseOut('out')">
                                    Outfits <br />
                                    <a class="btn btn-primary" href="~/Outfits/Index">Click Here!</a>
                                </p>
                            </div>
                            <div class="col-sm-6 col-md-4"></div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-2"></div>
                </div>
            </div>
            <div class="row empty-row"></div>
            <div class="row empty-row"></div>
        </div>
    </div>
    <div class="row">
            <div class="col-sm-12" id="copy" onclick="Click(this)">
                &copy;2018
            </div>
            <button type="button" class="btn btn-danger" id="btn2" onclick="luckyNumbers()">Lucky Numbers</button>
    </div>
</body>
